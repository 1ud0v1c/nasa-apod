<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dialog -->
    <style name="FullScreenDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/dialogBackground</item>
        <item name="android:statusBarColor">@color/dialogBackground</item>
    </style>

    <style name="FullScreenDialog.Modal">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="NumberPickerDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/dialogBackground</item>
    </style>

    <!-- Buttons -->
    <style name="MaterialImageButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>
</resources>